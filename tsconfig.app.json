{
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "composite": true,
        "experimentalDecorators": true,
        "outDir": "./out-tsc/app",
        "types": ["node"],
        "baseUrl": ".",
        "paths": {
            "tslib": ["node_modules/tslib/tslib.d.ts"]
        }
    },
    "files": [
        "src/main.ts",
        "src/polyfills.ts"
    ],
    "include": [
        "src/**/*.d.ts", "./src/**/*", "./src/**/*.json"
    ],
    "types": ["node"]
}
